// INTRO
tr
  td
    table(border="0" cellpadding="0" cellspacing="0" width="100%" style="table-layout: fixed;")
      tr
        td(class="padding" align="center" bgcolor="#ffffff" style="padding: 40px 0px 40px 0px;")

          // wrapper table
          table(class="wrapper" border="0" cellpadding="0" cellspacing="0" width="520")
            tr
              td
                // content
                table(class="wrapper" border="0" cellpadding="0" cellspacing="0" width="31%" align="left")
                  tr
                    td(class="padding" align="center")
                      a(href="http://jaoa.org/Issue.aspx" target="_blank" style="text-decoration: none;")
                        img(v-bind:src="coverImageSrc" width="188" height="260" border="1" alt="JAOA cover" style="display: block; padding: 0; color: #ffffff; font-family: Helvetica, arial, sans-serif; font-size: 16px; border: 1px solid #cccccc;")

                table(class="wrapper" border="0" cellpadding="0" cellspacing="0" width="58%" align="right")
                  tr
                    td(class="mobile-text-center" v-bind:style="teaserStyle").
                      {{ teaser }}
                  tr
                    td(class="intro-text" style="padding: 0 0 20px 0; font-family: 'Roboto', Helvetica, arial, sans-serif; font-weight: normal; font-size: 16px; text-align: left; line-height: 20px; color: #666666;").
                      {{ blurb }}
                  tr
                    td(class="padding")
                      // BUTTON
                      table(width="100%" border="0" cellspacing="0" cellpadding="0")
                        tr
                          td(align="center" style="padding: 0;")
                            a(class="body-text" v-bind:href="url" target="_blank" v-bind:style="buttonStyle").
                              &nbsp;{{ buttonText }}&nbsp;
