div
  div(class="form-group")
    label Board
    select(class="form-control" v-model="boardFriendly")
      option(v-for="board in sortedBoards") {{ board }}

  transition(name="fade")
    div(v-if="showExamForm")
      div(class="image-group clearfix" v-for="(exam, index) in exams")
        h3 Exam
        div.form-group
          label Date
          input(type="date" class="form-control" v-model="exam.date" onFocus="this.select();")

        div.form-group
          label Location
          input(type="text" class="form-control" v-model="exam.location") 

        div.form-group
          label First Application Deadline
          input(type="date" class="form-control" v-model="exam.firstDeadline")

        div.form-group
          label Final Application Deadline (optional)
          input(type="date" class="form-control" v-model="exam.finalDeadline")

        div.form-group
          label Link to application
          input(type="url" class="form-control" v-model="exam.url" placeholder="https://www.example.com")

        div.form-group
          button(class="btn btn-xs btn-danger pull-right" id="removeExam" v-on:click="removeExam" v-bind:data-exam="index") Remove Exam

  div.form-group.clearfix
    button(class="btn btn-default pull-right" id="showExamForm" v-on:click="addExam" v-text="exams.length > 0 ? 'Add Another Exam' : 'Add Exam'")

  include ./../../includes/copy-buttons
