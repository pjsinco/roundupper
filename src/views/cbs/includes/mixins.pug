mixin button(color, url, text)
  // BUTTON
  table(width="100%" border="0" cellspacing="0" cellpadding="0")
    tr
      td(align="center" style="padding: 10px 0px 0px 0px;")
        table(width="100%" border="0" cellspacing="0" cellpadding="0")
          tr
            td(align="center")
              a(class="body-text" href=url target="_blank" style="padding: 0px 10px 0px 10px; font-size: 13px; line-height: 26px; font-family: Helvetica, Arial, sans-serif; font-weight: normal; color: #ffffff; text-decoration: none; text-transform: uppercase; letter-spacing: 2px; background-color: #466687; border-top: 5px solid #466687; border-bottom: 5px solid #466687; border-left: 20px solid #466687; border-right: 20px solid #466687; display: inline-block; border-radius: 20px;")= text

