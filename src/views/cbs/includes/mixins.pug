mixin examRow(text, paddingStyle, color, fontWeight, fontSize, lineHeight, styleObject, button = false)
  - var styleBase = { padding: paddingStyle, fontFamily: 'Helvetica, Arial, sans-serif', color: color, fontWeight: fontWeight, fontSize: fontSize, lineHeight: lineHeight }
 
  if (styleObject) 
    - var styleBase = Object.assign({}, styleBase, styleObject)

  tr
    td(class!=attributes.class align="center" width="300" style=styleBase)= text
      if (button)
        +button(button.buttonColor, button.link, button.buttonText)
  

mixin exam(color, textColor, date, location, firstDeadline, finalDeadline, link, buttonColor, buttonText)
  tr
    td(class="padding" align="center" style="padding: 0px 0px 40px 0px;")
      table(class="wrapper" border="0" cellpadding="0" cellspacing="0" width="320" style={ border: `1px solid ${color}`, borderRadius: '4px', borderCollapse: 'separate !important' })
        tr
          td(align="center" width="300" style={ padding: '6px 10px 6px 10px', fontFamily: 'Helvetica, Arial, sans-serif', color: textColor, fontWeight: 'bold', fontSize: '16px', lineHeight: '23px' } bgcolor=color)
            | #{date}
        -var deadlineText = (finalDeadline ? 'First Application Deadline' : 'Application Deadline')
        -var firstDeadlineDescription = (finalDeadline ? 'No late fee' : null)
        -var cellPadding = (finalDeadline ? '0px 0px 10px 0px' : '0px 0px 0px 0px')
        +examRow(location, '15px 0px 0px 0px', textColor, 'normal', '21px', '28px')(class="padding-sides-only")

        +examRow(deadlineText, '12px 0px 0px 0px', '#a2a2a2', 'light', '13px', '18px', { textTransform: 'uppercase', letterSpacing: '1px' })(class="padding-sides-only")

        if (firstDeadlineDescription)
          +examRow(firstDeadlineDescription, '2px, 0px 0px 0px', '#a2a2a2', 'light', '13px', '18px')(class="padding-sides-only")

        +examRow(firstDeadline, cellPadding, textColor, 'normal', '16px', '26px')(class="padding-sides-only")

        if (finalDeadline)
          +examRow('Final application deadline', '0px 0px 0px 0px', '#a2a2a2', 'light', '13px', '18px', { textTransform: 'uppercase', letterSpacing: '1px'})(class="padding-sides-only")
          +examRow('With late fee', '2px 0px 0px 0px', '#a2a2a2', 'light', '13px', '18px')(class="padding-sides-only")
          +examRow(finalDeadline, '0px 0px 0px 0px', textColor, 'normal', '16px', '26px')(class="padding-sides-only")

        +examRow('', '0px 0px 20px 0px', color, 'normal', '16px', '26px', {}, { buttonColor, link, buttonText })(class="padding-sides-only")

mixin baseTd(align = 'left', padding = '0px 0px 15px 0px', valign = 'top', width )
  -
    var style = {
      padding: '0px 0px 15px 0px',
      fontFamily: 'Helvetica, Arial, sans-serif',
      color: '#717171',
      fontWeight: 'normal',
      fontSize: '16px',
      lineHeight: '26px',
    };

  if width
    td(class!=attributes.class align=align style=style valign=valign width=width)
  else
    td(class!=attributes.class align=align style=style valign=valign)

