template(v-slot:form)
  h1.component__title News item with image
  div.form-group
    label(for="headline") Headline
    input(type="text" id="headline" v-model="headline").form-control

  div.form-group
    label(for="input") Text (in Markdown)
    textarea(id="input" v-model="input").form-control

  div.form-group
    label(for="imageUrl") Image URL
    input(type="text" id="imageUrl" v-model="imageUrl").form-control

  div.form-group
    label(for="altText") Alt text
    input(type="text" id="altText" v-model="altText").form-control

  include ../../includes/copy-buttons
